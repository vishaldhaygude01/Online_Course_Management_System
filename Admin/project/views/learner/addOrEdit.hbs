<h3>{{viewTitle}}</h3>

<form action="/learner" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{learner._id}}">
    {{!-- <h3>Insert Learner Details</h3> --}}
    
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="e.g. James Alexander Thomas" value="{{learner.fullName}}">
        <div class="text-danger">
            {{learner.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="e.g. james123@gmail.com" value="{{learner.email}}">
        <div class="text-danger">
            {{learner.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{learner.mobile}}">
            <div class="text-danger">
            {{learner.mobileError}}</div>
        </div>
        <div class="form-group col-md-6">
            <label>Address</label>
            <input type="text" class="form-control" name="address" placeholder="Address" value="{{learner.address}}">
        </div>
        <div class="form-group col-md-6">
            <label>Qualification</label>
            <input type="text" class="form-control" name="qualification" placeholder="Qualification" value="{{learner.qualification}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/learner/list"><i class="fa fa-list-alt"></i> Display Data</a>
    </div>
</form>